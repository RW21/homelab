version: 0.1
proxy:
  remoteurl: https://registry-1.docker.io
  username: {{ dockerhub_username }}
  password: {{ dockerhub_password }}
storage:
  filesystem:
    rootdirectory: /var/lib/registry
http:
  addr: :5000
  headers:
    X-Content-Type-Options: [nosniff]
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
